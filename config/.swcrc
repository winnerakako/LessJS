{
    "$schema": "https://json.schemastore.org/swcrc",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true
        },
        "target": "es2018",
        "keepClassNames": true,
        "externalHelpers": false
    },
    "module": {
        "type": "commonjs"
    },
    "sourceMaps": true
}