{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types",
            "_lessjs/types"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "_lessjs/types/*"
            ],
            "_lessjs": [
                "./_lessjs"
            ],
            "_lessjs/*": [
                "./_lessjs/*"
            ],
            "src/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "./**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}